{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}