<svg version="1.1" baseProfile="full" width="300" height="86" viewBox="0 0 300 86" preserveAspectRatio="xMinYMin meet" xmlns="http://www.w3.org/2000/svg">
  <style>
    text {
      fill: #EAEAEA;
      font: 500 12px 'Segoe UI', Ubuntu, Sans-Serif;
    }
    .username {
      font-weight: 500;
      font-size: 16px;
    }
    .reputation {
      font-weight: 600;
      font-size: 14px;
    }
    .website, .location {
      font-size: 10px;
    }
    .website {
      fill: #81C4F8;
    }
    .badge-count circle {
      cx: 0;
      cy: -4;
      r: 4;
    }
  </style>

  <rect 
    x="0"
    y="0"
    rx="5"
    ry="5"
    width="300"
    height="86"
    fill="#2D2D2D"
    stroke-width="2"
    stroke="#F48024"
  ></rect>
  <svg x="11" y="11" width="auto">

    {{! -- START user avatar -- }}
     <rect id="imageCtn" transform="translate(0,0)" width="64" height="64"  rx="5"/>
      <clipPath id="clip">
        <use href="#imageCtn"/>
      </clipPath>
    </defs>
    <use href="#imageCtn" stroke-width="2" stroke="black"/>
    <image width="64" height="64" clip-path="url(#clip)" href="{{avatar}}" />
    {{! -- EMD user avatar -- }}

    <g transform="translate(75,13)">
      <text class="username" transform="translate(0,0)">{{username}}</text>
      <g transform="translate(0,22)" style="font-weight: 800;">
        <text class="reputation">{{reputation}}</text>
        <g transform="translate(50, 0)">
          <g class="badge-count">
            <circle fill="#FFCC01"/>
            <text x="7">{{badges.gold}}</text>
          </g>
          <g transform="translate(35, 0)" class="badge-count">
            <circle fill="#B4B8BC"/>
            <text x="7">{{badges.silver}}</text>
          </g>
          <g transform="translate(70, 0)" class="badge-count">
            <circle fill="#D1A684"/>
            <text x="7">{{badges.bronze}}</text>
          </g>
        </g>
      </g>
      {{#if location}}
        <g transform="translate(0,38)">
          <text class="location">{{location}}</text>
        </g>
      {{/if}}
      {{#if website}}
        <g transform="translate(0,50)">
          <text class="website">{{website}}</text>
        </g>
      {{/if}}
    </g>
  </svg>

  {{> so-icon }}
</svg>